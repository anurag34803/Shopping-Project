            </div> -->
    </div>

    

    

    <!-- Cart Summary -->
    <div class="lg:ml-8 my-4 shadow-md  bg-white rounded-md p-4 w-full lg:max-w-96 h-72 border border-gray-200">
        <h2 class="text-xl font-semibold mb-2">Order Summary</h2>
             <div class="text-gray-600 py-2 flex justify-between border-b border-gray-300">
                <p>Subtotal : </p>
                <p class="total"></p>
             </div>

             <div class="text-gray-600 py-2 flex justify-between border-b border-gray-300">
                <p>Shipping estimate :</p>
                <p>₹ 0</p>
             </div>

             <div class="text-gray-600 py-2 flex justify-between border-b border-gray-300">
                <p>Tax estimate : </p>
                <p>₹ 0</p>
             </div>

             <div class="order-total font-semibold py-2 flex justify-between">
                <p>Order total : </p>
                <p class="total"></p>
             </div>
            
             <div class="coupons flex items-center w-full">
                <input class="h-full" placeholder="Enter Coupon" type="number" name="number">
                <button class="m-2 hover:bg-green-500 hover:text-white px-8 py-2 border border-green-500 text-green-500 rounded-md">Apply</button>
             </div>
            <button class="mt-2 w-full bg-green-500 text-white py-2 rounded-md">Checkout</button>
        </div>
    </div>
